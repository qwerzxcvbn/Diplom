<Window x:Class="StuldastolClient.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StuldastolClient.Views"
        mc:Ignorable="d"
        Title="Главное окно" Height="980" Width="1920" WindowState="Maximized" Icon="/Images/icon.ico">
    <Grid>
        <Image Source="/Images/stone3.png" Height="600" Width="400" HorizontalAlignment="Center"></Image>
        <StackPanel Width="1000" HorizontalAlignment="Left">
            <TextBlock Text="STULDASTOL" FontWeight="Bold" Width="650" HorizontalAlignment="Left" FontFamily="Bookman Old Style" FontSize="90" Margin="20 20 0 0"></TextBlock>
            <TextBlock Text="+7 (968) 897-73-03" FontFamily="Century Gothic" FontSize="30" HorizontalAlignment="Right" Margin="0 -70 20 30" Foreground="#FF717171"></TextBlock>
            <TextBlock Text="Процесс изготовления стульев на нашем предприятии" FontFamily="Century Gothic" FontSize="33" Margin="20 30 0 0" Foreground="#FF717171"></TextBlock>
            <TextBlock Text="осуществляется полностью вручную и проходит " FontFamily="Century Gothic" FontSize="33" Margin="20 0 20 0" Foreground="#FF717171"></TextBlock>
            <TextBlock Text="тщательную проверку на каждом этапе." FontFamily="Century Gothic" FontSize="33" Margin="20 0 0 50" Foreground="#FF717171"></TextBlock>
            <Image Source="/Images/ImageStart.png" Width="700"></Image>
            <Image Source="/Images/PhotoFirst.png" Width="430" Margin="-570 150 0 0"></Image>
            <StackPanel HorizontalAlignment="Right" Width="450" Margin="0 -500 50 60">
                <Button x:Name="ConsultButton" FontFamily="Bookman Old Style" Content="Бесплатная консультация" FontSize="30" Height="90" Margin="0 0 0 30" Foreground="White" Click="ConsultButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF2D2D2D"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF636363"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="ContactButton" FontFamily="Bookman Old Style" Content="Наши Контакты" FontSize="30" Height="90" Margin="0 0 0 30" Foreground="White" Click="ContactButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF2D2D2D"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF636363"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <Button x:Name="CatalogButton" FontFamily="Bookman Old Style" Content="Каталог" FontSize="30" Height="90" Margin="0 0 0 30" Foreground="White" Click="CatalogButton_Click">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="#FF2D2D2D"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF636363"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Width="920" HorizontalAlignment="Right">
            <Image Source="/Images/StartRight.png"></Image>
        </StackPanel>
        
        <Button x:Name="BackButton" Height="60" Width="60" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 20 30 0" Click="BackButton_Click">
            <Image Source="/Images/close.png" ></Image>
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFECECEC"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
